.contain{
    padding: 10px;
    margin-top: 25px;
}
.item{
    padding: 8px 0;
    border-bottom: 1px dashed #eee;
}
.item::after{
    content:"";
    clear:both;
    position:absoult;
    height:0;
}
.item:last-child{
    border-bottom: none;
}
.left{
    float:left;
    width: 67%;
    height: 60px;
    position:relative;
}
.title{
    font-size:12px;
    font-family:"微软雅黑";
}
.sub_title{
    position:absolute;
    left: 0;
    bottom: 0;
}
.sub_title text{
    color:#aaa;
    padding-right : 5px;
    font-size : 12px;
}
.right{
    float:right;
    width: 30%;
}
.right image{
    width: 100%;
    height: 60px;
    display: block;
}
.scroll-view_H{
    white-space: nowrap;
    box-shadow:0 0 10px 1px #efefef;
    font-size:12px;
    position: fixed;
    top: 0;
    background:rgba(255,255,255,0.8);
    z-index:1;
}
.scroll-view-item{
    height: 40px;
}
.scroll-view-item_H{
    display: inline-block;
    width: 20%;
    height: 25px;
    line-height: 25px;
    text-align: center;
}
.scroll-view-item_H.active{
    color:green;
    border-bottom: 2px solid #eee;
}
